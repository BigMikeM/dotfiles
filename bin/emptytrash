#!/usr/bin/env bash

# Empty trash-like directories on Linux (user cache/tmp)
#
# Author: Artem Sapegin, sapegin.me
# License: MIT
# https://github.com/sapegin/dotfiles

# Linux-friendly cleanup (safe defaults)
rm -rfv "$HOME"/.local/share/Trash/* 2>/dev/null || true
rm -rfv "$HOME"/.cache/* 2>/dev/null || true
sudo rm -rfv /root/.local/share/Trash/* 2>/dev/null || true
